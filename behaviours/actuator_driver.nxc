// Actuator Driver state function
sub actuator_driver(int &motor_array[])
{
  TextOut(0,LCD_LINE1,"actuator_driver");

  if(motor_array[0] < 0)
  {
    OnFwd(WHEEL_LEFT,abs(motor_array[0]));
  } else
  {
    OnRev(WHEEL_LEFT,abs(motor_array[0]));
  }
  if(motor_array[1] < 0)
  {
    OnFwd(WHEEL_RIGHT,abs(motor_array[0]));
  } else
  {
    OnRev(WHEEL_RIGHT,abs(motor_array[0]));
  }
}
